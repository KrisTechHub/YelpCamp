<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= campground.image %>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location %></li>
                <li class="list-group-item">â‚¬<%= campground.price %>/night</li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <a class="btn btn-info card-link" href="/campgrounds">All Campgrounds</a>
            </div>


            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>


            <h5><i>Leave a review</i></h5>
            <form action="" class="mb-3">
                <div class="mb-3">
                    <label class="form-label" for="rating"><i>Rating</i></label>
                    <input class="form-range" type="range" id="rating" min="1" max="5" name="review[rating]">

                </div>
                <div class="mb-3">
                    <label class="form-label" for="body"><i>Review</i></label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="4"></textarea>
                </div>

                <button class="btn btn-success" type="submit">Submit</button>
            </form>

    </div>
</div>    